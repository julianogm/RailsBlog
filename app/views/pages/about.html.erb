<div class="app-card-container">
  <div class="card">
    <h3>About Me</h3>
    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "profile.jpg", width:"90%", class: 'img-thumbnail mx-auto d-block' %>
        <div class="skills">
          <% @skills.each do |skill| %>
            <%= skill.title %>
            <div class="progress" style="height: 10px;">
              <div
                class="progress-bar bg-success"
                role="progressbar"
                aria-valuenow="<%= skill.percent_utilized %>"
                aria-valuemax="100"
                style="width: <%= skill.percent_utilized %>%"
              ></div>

            </div>
          <% end %>
        </div>
      </div>

      <div class="col-md-8">
        <p>I'll fill this later</p>

        <p>
          <button
            type="button"
            class="btn btn-primary"
            data-bs-toggle="collapse"
            data-bs-target="#jobHistory"
            aria-expanded="false"
            aria-controls="jobHistory"
          >
            Job history
          </button>

          <button
            type="button"
            class="btn btn-primary"
            data-bs-toggle="collapse"
            data-bs-target="#education"
            aria-expanded="false"
            aria-controls="education"
          >
            Education
          </button>
        </p>
        <p>
          <div class="collapse" id="jobHistory">
            <div class="card-body">
              Job 1
            </div>
            <div class="card-body">
              Job 2
            </div>
            <div class="card-body">
              Job 3
            </div>
          </div>

          <div class="collapse" id="education">
            <div class="card-body">
              Job 1
            </div>
            <div class="card-body">
              Job 2
            </div>
            <div class="card-body">
              Job 3
            </div>
          </div>
        </p>
      </div>
    </div>

  </div>
</div>
