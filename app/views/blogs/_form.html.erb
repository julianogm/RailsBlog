<%= form_with(model: blog) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :topic_id %>
    <%= form.collection_select(:topic_id, Topic.all, :id, :title,
                                {
                                  include_blank: true
                                },
                                class: 'form-control'
                              )
    %>
  </div>

  <div class="form-group">
    <%= form.radio_button :status, 'draft' %>
    <%= form.label :status, 'Draft' %>
  </div>

  <div class="form-group">
    <%= form.radio_button :status, 'published' %>
    <%= form.label :status, 'Published' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: '7' %>
  </div>

  <div class="form-group mt-2 d-grid gap-2 d-md-block">
    <%= form.submit "Submit", class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Back', blogs_path, class: 'btn btn-outline-warning btn-sm' %>
  </div>
<% end %>
