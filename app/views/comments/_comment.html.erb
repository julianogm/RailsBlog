<div class="comment-card mt-2">
  <div class="card mt-1">
    <div class="card-body">
      <div class="row ">
        <div class="col-sm-2 d-flex justify-content-center">
          <%= gravatar_helper(comment.user) %>
        </div>

        <div class="col-sm-9">
          <div>
            <%= comment.content %>
          </div>
          <div class="small fst-italic">
            <%= comment.user.name %> -
            <%= t('comment.published', 
                  days: distance_of_time_in_words(comment.created_at, Time.now)) %>
          </div>
        </div>

        <div class="col-sm-1">
        </div>
      </div>
    </div>
  </div>
</div>