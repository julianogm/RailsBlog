<div class="comment-card">
  <div class="card mt-1">
    <div class="card-body">
      <div class="row">
        <div class="col-md-1">
          <%= gravatar_helper(comment.user) %>
        </div>

        <div class="col-md-11">
          <div>
            <%= comment.content %>
          </div>
          <div class="small fst-italic">
              <%= comment.user.name %> -
              <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
  </div>
</div>